{
	"name": "yard/wp-block-registrar",
	"type": "package",
	"description": "An Acorn package for WordPress block registration.",
	"license": "MIT",
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"pestphp/pest-plugin": true
		},
		"platform": {
			"php": "8.2"
		}
	},
	"require": {
		"php": ">=8.2",
		"roots/acorn": "^4.0|^5.0",
		"spatie/laravel-package-tools": "^1.16"
	},
	"require-dev": {
		"10up/wp_mock": "^0.4.2",
		"larastan/larastan": "^3.0",
		"orchestra/testbench": "^10.0",
		"pestphp/pest": "^3.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"yard/php-cs-fixer-rules": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Yard\\Block\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Yard\\Block\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"
		],
		"all": [
			"@test",
			"@analyse",
			"@format"
		],
		"analyse": "vendor/bin/phpstan analyse --debug --memory-limit 1G",
		"format": "vendor/bin/php-cs-fixer fix",
		"test": "vendor/bin/pest",
		"test:coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
	},
	"extra": {
		"acorn": {
			"providers": [
				"Yard\\Block\\BlockServiceProvider"
			]
		}
	}
}
